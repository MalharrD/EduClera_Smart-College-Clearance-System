{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    
    // CHANGE THIS LINE:
    "moduleResolution": "bundler",
    
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // ADD THIS SECTION:
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}